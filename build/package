#!/bin/bash
# Package a specified version.

cd `dirname $0`

platform=`./parse_platform`

if [ $? -ne 0 ]
then
  echo "Invalid platform."
  exit 1
fi

rev=`./version`

cd ..
rm -rf pkg/packages/*
rm -rf dist/*

case $platform in

el[567])
  PKG=rpm
  ;;

debian[67]|ubuntu1[024].04)
  PKG=deb
  ;;

mac)
  PKG=mac
  ;;

*)
  echo Invalid platform $platform
  exit 1
  ;;

esac

make OS=$platform $PKG
